<div id="m-product-bops-modal">
  <div class="mb-modal-header">

    <div class="row">
      <div class="small-1 columns m-header-first"><div class="mb-j-modalHeader-left m-back">&nbsp;</div></div>
      <div class="small-10 columns m-header-title left nopad">
        {{#if product.isFIIS}}
          Find in Store
        {{else}}
          Check Availability
        {{/if}}
      </div>
    </div>
  </div>

  <div class="mb-modal-content">
    <section id="bops-product-info">
      {{#if product.images}}
        <div id="bops-product-image-wrapper">
          <img id="bops-product-image" src="{{#displayConfig}}{{paths.product.image}}{{/displayConfig}}{{productPrimaryImage product.images product.activeImageset}}" class="m-product-img" width="100%" />
        </div>
      {{/if}}
      <div id="bops-product-details">
        <div id="bops-product-details-name">{{product.name}}</div>

        {{#if product.activeColor}}
          <div id="bops-product-details-color"><span class="strong">Color:</span> {{productColorName product.colors product.activeColor}}</div>
        {{/if}}

        {{#if product.activeSize}}
          <div id="bops-product-details-size"><span class="strong">Size:</span> {{productSizeName product.sizes product.activeSize}}</div>
        {{/if}}

        {{#if product.activeType}}
          <div id="bops-product-details-type"><span class="strong">Type:</span> {{productTypeName product.types product.activeType}}</div>
        {{/if}}

        {{#if product.isFIIS}}
          <strong>Web ID:</strong>&nbsp;{{product.id}} <strong>SKU:</strong>&nbsp;{{id}}
        {{/if}}

      </div>
      <div class="clearfix"></div>
    </section>

    {{#if product.isFIIS}}
      <section id="bops-product-fiis-message">
        PLEASE NOTE: Samples may vary in stores. Some samples listed as "on display" may actually be represented in-store by another item from the same collection. Inventory is always changing, stock status and sample availability cannot be guaranteed.
      </section>
    {{/if}}

    <div id="m-bops-search">
      <div id="m-bops-search-form">
        <div id="bops-errorContainer"></div>

        <h1 class="base">Search for a store:</h1>

        <div id="bops-search-section">
          <div class="m-search-section m-address row">
            <div class="m-bops-address-wrapper small-11 columns nopad">
              <input name="address" type="text" id="mb-bops-address" class="box-search" placeholder="Zip code or city/state" value="{{defaultZipCode}}">
              <div class="mb-bops-search-clear icon-searchClear icon-search-clear"></div>
            </div>
            <div id="mb-bops-nearme" class="m-nearme small-1 columns nopad"></div>
          </div>

          <div class="m-search-section">
            <div class="m-select-wrapper" id="m-bops-distance-wrapper">
              <div class="m-select-button"><div class="display">Show stores within {{distance}} miles</div></div>
              <select name="distance" class="m-select" id="mb-bops-distance">
                <option value="5" {{#if_eq distance compare="5"}}selected{{/if_eq}}>Show stores within 5 miles</option>
                <option value="10" {{#if_eq distance compare="10"}}selected{{/if_eq}}>Show stores within 10 miles</option>
                <option value="25" {{#if_eq distance compare="25"}}selected{{/if_eq}}>Show stores within 25 miles</option>
                <option value="50" {{#if_eq distance compare="50"}}selected{{/if_eq}}>Show stores within 50 miles</option>
                <option value="100" {{#if_eq distance compare="100"}}selected{{/if_eq}}>Show stores within 100 miles</option>
              </select>
            </div>
          </div>

          <div class="m-bops-buttons">
            <div class="m-bops-button m-bops-search-wrapper">
              <button id="mb-bops-search" class="m-button">Search</button>
            </div>
          </div>

        </div>
      </div>
    <section id="bops-results"></section>
  </div>
</div>
